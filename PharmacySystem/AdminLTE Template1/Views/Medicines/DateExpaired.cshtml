@model IEnumerable<AdminLTE_Template1.Models.MedicineDetail>
<link rel="stylesheet" href="~/Content/css/bootstrap.css" />
<h3 style="color:crimson;text-align:center"><b><u>Expired Medicine Details</u></b></h3>
<br />
<script src="https://cdn.datatables.net/responsive/2.1.1/js/responsive.bootstrap.min.js"></script>
@if (Model.Count() == 0)
{
    <h3 style="color:red">Expired Medicines Are Not in database</h3>
}
else
{
<table class="table">
    <tr class="bg-primary">
        <th>
            @Html.DisplayNameFor(model => model.MedicineName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ManufacturedDate)
        </th>
        <th>
            @Html.DisplayName("ExpiredDate(mm/dd/yyyy)")
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.CategoryDisease.CategoryName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr class="bg-danger" style="font-size:medium">
        <td>
            @Html.DisplayFor(modelItem => item.MedicineName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ManufacturedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExpiredDate)
        </td>
        
        <td>
            <img src="~/Content/img/@item.Image" width="90" height="90" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryDisease.CategoryName)
        </td>
        <td>
            <div class="btn btn-info">@Html.ActionLink("Details", "Details", new { id = item.M_ID })</div> |
            <div class="btn btn-info">@Html.ActionLink("Delete", "Delete", new { id = item.M_ID })</div> 
</td>
    </tr>
}

</table>
}