<header class="main-header">
    @* BEGIN Logo *@
    <a href="@Url.Action("Index", "Home")" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><b>P</b>S</span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg"><b>Pharmacy</b>System</span>
    </a>
    @* END Logo *@
    @* BEGIN Header *@
    <nav class="navbar navbar-static-top" role="navigation">
        <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                @* BEGIN Messages *@
                <li class="dropdown messages-menu">            
                    <a href="@Url.Action("Index","SendMailer")" > <i class="fa fa-envelope-o"></i>   </a>
                   
                </li>
                @* END Messages *@
                @* BEGIN Notifications *@
                <li class="dropdown notifications-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-bell-o"></i>                      
                    </a>
                    <ul class="dropdown-menu">
                        <li class="header" style="background-color:aqua"><a href="@Url.Action("DateExpaired","Medicines")">Expired Medicines Details</a></li>
                        <li class="header" style="background-color:aqua"><a href="@Url.Action("DateToBeExpaired","Medicines")">Expired Medicines Within 30 Days</a></li>
                        <li class="header" style="background-color:aqua"><a href="@Url.Action("MedicineSort","Medicines")">Sell Medicines</a></li>                      
                    </ul>
                </li>
                @* END Notifications *@
                @* BEGIN Tasks *@
                <li class="dropdown tasks-menu">
                    @*<a href="#" class="dropdown-toggle" data-toggle="dropdown">*@
                        <a href="@Url.Action("Index1","Home")"><i class="fa fa-flag-o"></i></a>
                      @*</a>*@
                    
                </li>
                @* END Tasks *@
                @* BEGIN User Account Menu *@
                <li class="dropdown user user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <img src="~/Content/img/admin.png" class="user-image" alt="User Image">
                        <span class="hidden-xs">Admin Profile View</span>
                    </a>
                    <ul class="dropdown-menu">
                        <li class="user-header">
                            <img src="~/Content/img/admin.png" class="img-circle" alt="User Image">

                            <p>
                                Admin Profile - Pharmacy System
                                <small>Started since Jan. 2017</small>
                            </p>
                        </li>
                        <li class="user-body">
                            <div class="row">
                                <div class="col-xs-4 text-center">
                                    <a href="#">Followers</a>
                                </div>
                                <div class="col-xs-4 text-center">
                                    <a href="@Url.Action("ChangePassword","Login")">Change Password</a>
                                </div>
                                <div class="col-xs-4 text-center">
                                    <a href="@Url.Action("Index1","Logs")">Log</a>
                                </div>
                            </div>
                        </li>
                        <li class="user-footer">
                            <div class="pull-left">
                                <a href="@Url.Action("Details","AdminView",new { id=1})" target="_blank" class="btn btn-default btn-flat">Profile</a>
                            </div>
                            <div class="pull-right">
                                <a href="@Url.Action("LogOut","Login")" class="btn btn-default btn-flat">Sign out</a>
                            </div>
                        </li>
                    </ul>
                </li>
                @* END User Account Menu *@
                @* BEGIN Control Sidebar Toggle Button *@
                <li>
                    <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
                </li>
                @* END Control Sidebar Toggle Button *@
            </ul>
        </div>
    </nav>
</header>